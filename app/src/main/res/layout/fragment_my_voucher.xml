<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Voucher.VoucherFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/light_yellow"
            android:padding="16dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:textSize="35dp"
                android:text="Your Voucher"/>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/voucher_3d" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/transparent_white_gray">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewVoucher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp">

            </androidx.recyclerview.widget.RecyclerView>

            <Button
                android:id="@+id/claimNewVoucherBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/my_voucher_button"
                android:text="! Claim Voucher Now !"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_gravity="center_horizontal|bottom"/>

        </LinearLayout>


    </LinearLayout>

</FrameLayout>